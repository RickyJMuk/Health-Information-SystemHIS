<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Client List</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>
<body class="container mt-5">
  <nav class="navbar navbar-expand-lg navbar-light bg-info bg-opacity-25 mb-4 rounded">
    <div class="container-fluid">
      <a class="navbar-brand text-primary fw-bold" href="/">Health Information System</a>
    </div>
  </nav>

  <div class="card shadow-sm border-info">
    <div class="card-body">
      <h1 class="mb-4 text-info">Client List</h1>

      <a href="/" class="btn btn-outline-info mb-3">Back to Home</a>

      <% if (clients.length === 0) { %>
        <div class="alert alert-info">No clients found</div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
                <th>Phone</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% clients.forEach(client => { %>
                <tr>
                  <td><%= client.id.slice(0, 8) %></td>
                  <td><%= client.firstName %> <%= client.lastName %></td>
                  <td><%= new Date(client.dob).toLocaleDateString() %></td>
                  <td><%= client.gender %></td>
                  <td><%= client.phone %></td>
                  <td>
                    <a href="/clients/<%= client.id %>" class="btn btn-sm btn-info text-white">View</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
