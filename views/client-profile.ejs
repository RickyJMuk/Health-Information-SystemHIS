<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Client Profile</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
</head>
<body class="container mt-5">
  <h1 class="mb-4">Client Profile</h1>
  
  <a href="/clients" class="btn btn-secondary mb-3">Back to Clients</a>
  
  <div class="card mb-4">
    <div class="card-body">
      <h2 class="card-title"><%= client.firstName %> <%= client.lastName %></h2>
      <p class="card-text">
        <strong>ID:</strong> <%= client.id %><br>
        <strong>Date of Birth:</strong> <%= new Date(client.dob).toLocaleDateString() %><br>
        <strong>Gender:</strong> <%= client.gender %><br>
        <strong>Address:</strong> <%= client.address %><br>
        <strong>Phone:</strong> <%= client.phone %><br>
        <strong>Email:</strong> <%= client.email || 'N/A' %><br>
        <strong>Registered:</strong> <%= new Date(client.registeredAt).toLocaleString() %>
      </p>
    </div>
  </div>
  
  <div class="card mb-4">
    <div class="card-body">
      <h3 class="card-title">Enrolled Programs</h3>
      
      <% if (enrolledPrograms.length === 0) { %>
        <div class="alert alert-info">Not enrolled in any programs</div>
      <% } else { %>
        <ul class="list-group">
          <% enrolledPrograms.forEach(program => { %>
            <li class="list-group-item"><%= program.name %></li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </div>
  
  <% if (availablePrograms.length > 0) { %>
    <div class="card">
      <div class="card-body">
        <h3 class="card-title">Enroll in New Program</h3>
        
        <form action="/clients/<%= client.id %>/enroll" method="post">
          <div class="mb-3">
            <select class="form-select" name="programId" required>
              <option value="">Select a program...</option>
              <% availablePrograms.forEach(program => { %>
                <option value="<%= program.id %>"><%= program.name %></option>
              <% }) %>
            </select>
          </div>
          <button type="submit" class="btn btn-primary">Enroll</button>
        </form>
      </div>
    </div>
  <% } %>
  
  <div class="mt-4">
    <h4>API Access</h4>
    <p>You can access this client's data via the API:</p>
    <code>GET /api/clients/<%= client.id %></code>
    <a href="/api/clients/<%= client.id %>" class="btn btn-sm btn-outline-primary ms-2">Try it</a>
  </div>
</body>
</html>